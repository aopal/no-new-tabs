{
  "manifest_version": 2,
  "name": "No New Tabs",
  "version": "0.0.1",
  "description": "Adds a toggle to prevent tab creation",

  "icons": {
    "48": "img/no_icon_red.svg",
    "96": "img/no_icon_red.svg"
  },

  "background": {
    "scripts": ["src/background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "img/no_icon_red.svg",
      "32": "img/no_icon_red.svg"
    },
    "default_title": "No New Tabs",
    "default_popup": "src/popup.html"
  },
  "web_accessible_resources": [
    "img/no.jpg"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "no-new-tabs@aopal.dev"
    }
  }
}
